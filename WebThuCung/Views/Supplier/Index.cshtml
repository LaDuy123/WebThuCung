@model IEnumerable<WebThuCung.Models.Supplier>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Supplier List</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Supplier</li>
                <li class="breadcrumb-item active">List</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Supplier List</h5>
                       

                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name Supplier</th>
                                    <th>Phone</th>
                                    <th>Address</th>
                                    <th>Email</th>
                                    <th>Image</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var supplier in Model)
                                    {
                                        <tr>
                                            <td>@supplier.idSupplier</td>
                                            <td>@supplier.nameSupplier</td>
                                            <td>@supplier.Phone</td>
                                            <td>@supplier.Address</td>
                                            <td>@supplier.Email</td>
                                            <td>
                                                <img src="~/images/Customer/@supplier.Image" alt="Supplier Image" style="width: 100px; height: auto;" />
                                            </td>


                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">No suppliers found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main --></main><!-- End #main -->
