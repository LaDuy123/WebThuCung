@model WebThuCung.Dto.LoginDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/img/logo/petlove.png" type="image/png" />
    <title>Đăng Nhập Admin</title>
    <link href="~/css/dangnhapadmin.css" rel="stylesheet" />
</head>
<body>
    <div id="back">
        <canvas id="canvas" class="canvas-back"></canvas>
        <div class="backRight"></div>
        <div class="backLeft">
            <img class="product-image-feature" src="@Url.Content("~/img/pet960x1050.jpg")" alt="Pet Image" />
        </div>
    </div>

    <div id="slideBox">
        <div class="topLayer">
            <div class="right">
                <div class="content">
                    <h2 style="text-align:center;">Đăng Nhập</h2>
                    <h1 style="text-align:center;">Tài khoản Admin - Nhân viên quản lý sản phẩm</h1>

                    <!-- Thông báo đăng nhập -->
                    <h4 style="color:red;">@ViewBag.Thongbao</h4>

                    <!-- Form đăng nhập -->
                    <form asp-action="Login" asp-controller="Admin" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-element form-stack">
                            <!-- Hiển thị lỗi nếu có -->
                            <div style="color:red;font-size:small;text-align:initial">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>

                            <!-- Nhãn và ô nhập tên đăng nhập -->
                            <strong>@Html.LabelFor(model => model.userName, htmlAttributes: new { @class = "control-label col-md-2" })</strong>
                            <div style="color:red;font-size:small;text-align:initial">
                                @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                            </div>
                            <input class="form-control text-box single-line input-full" asp-for="userName" />

                        </div>

                        <div class="form-element form-stack">
                            <!-- Nhãn và ô nhập mật khẩu -->
                            <strong>@Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })</strong>
                            <div style="color:red;font-size:small;text-align:initial">
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            </div>
                            <input class="form-control text-box single-line input-full" asp-for="password" type="password" />
                        </div>

                        <div class="form-element form-submit">
                            <button class="login" type="submit">Đăng Nhập</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/dangnhapadmin.js"></script>
</body>
</html>
