@model WebThuCung.Dto.DetailOrderDto

@{
    ViewData["Title"] = "Create Detail Order";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Create Detail Order</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Detail Order</li>
                <li class="breadcrumb-item active">Create</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Create Detail Order</h5>

                        <!-- Validation Summary -->
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Create Detail Order Form -->
                        <form asp-action="CreateDetail" method="post">
                            <!-- Order ID (readonly) -->
                            <div class="row mb-3">
                                <label asp-for="idOrder" class="col-sm-2 col-form-label">Order ID</label>
                                <div class="col-sm-10">
                                    <input asp-for="idOrder" class="form-control" readonly value="@ViewBag.OrderId" />
                                    <span asp-validation-for="idOrder" class="text-danger"></span>
                                    <!-- Hidden field for ID -->
                                    <input type="hidden" asp-for="idOrder" value="@ViewBag.OrderId" />
                                </div>
                            </div>

                            <!-- Product Selection -->
                            <div class="row mb-3">
                                <label asp-for="idProduct" class="col-sm-2 col-form-label">Product</label>
                                <div class="col-sm-10">
                                    <select asp-for="idProduct" class="form-control" required>
                                        <option value="">-- Select a Product --</option>
                                        @foreach (var product in ViewBag.Products as List<SelectListItem>)
                                        {
                                            <option value="@product.Value">@product.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="idProduct" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="idSize" class="col-sm-2 col-form-label">Color</label>
                                <div class="col-sm-10">
                                    <select asp-for="idSize" class="form-control" required>
                                        <option value="">-- Select a Size --</option>
                                        @foreach (var product in ViewBag.Sizes as List<SelectListItem>)
                                        {
                                            <option value="@product.Value">@product.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="idSize" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="idColor" class="col-sm-2 col-form-label">Color</label>
                                <div class="col-sm-10">
                                    <select asp-for="idColor" class="form-control" required>
                                        <option value="">-- Select a COlor --</option>
                                        @foreach (var product in ViewBag.Colors as List<SelectListItem>)
                                        {
                                            <option value="@product.Value">@product.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="idColor" class="text-danger"></span>
                                </div>
                            </div>
                            <!-- Quantity -->
                            <div class="row mb-3">
                                <label asp-for="Quantity" class="col-sm-2 col-form-label">Quantity</label>
                                <div class="col-sm-10">
                                    <input asp-for="Quantity" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Create Detail Order</button>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <a asp-action="Detail" asp-route-orderId="@ViewBag.OrderId"
                                       class="btn btn-primary">Back</a>
                                </div>
                            </div>
                        </form><!-- End Create Detail Order Form -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
