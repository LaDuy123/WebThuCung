<script>
    function toggleReadMore(link) {
        const moreContent = link.previousElementSibling; // Lấy phần nội dung thêm
        if (moreContent.style.display === "none" || moreContent.style.display === "") {
            moreContent.style.display = "block"; // Hiện nội dung
            link.innerText = "Read less"; // Thay đổi nội dung link
        } else {
            moreContent.style.display = "none"; // Ẩn nội dung
            link.innerText = "Read more"; // Khôi phục nội dung link
        }
    }
</script>
