    <script type="text/javascript">

        $(document).ready(function () {
            // Gọi đến API kiểm tra xác thực người dùng
            $.ajax({
                url: '/Admin/CheckAuthentication',
                success: function (response) {
                    console.log(response);

                    if (response.isAuthenticated) {
                        const avatarUrl = "/admin/img/" + response.avatar;

                        // Kiểm tra nếu nút đăng nhập tồn tại, sau đó xóa nó
                        // var loginElement = document.querySelector('.in_login');
                        // if (loginElement) {
                        //     loginElement.remove();
                        // }
                        $('.in_login').remove();
                        if (response.isadmin) {

                            // Nếu người dùng là Candidate
                            $('.wrap_login').html(`
                                                <li class="has-children">
                                                    <img class="avatar_imgadmin" src="${avatarUrl}" alt="Candidate Avatar"></img>
                                                    <ul class="profileavataradmin">
                                                        <li><a href="/Admin/Profile">Profile</a></li>

                                                        <li><a class="logout1" href="#">Logout</a></li>
                                                    </ul>
                                                </li>
                                                `);
                        }


                        // Bắt sự kiện logout
                        $('.logout1').click(function (e) {
                            e.preventDefault();
                            $.ajax({
                                url: '/Admin/Logout',
                                method: 'POST',
                                success: function () {
                                    // Chuyển hướng sau khi đăng xuất thành công
                                    window.location.href = '/Admin/Login';
                                },
                                error: function () {
                                    alert('An error occurred during logout.');
                                }
                            });
                        });
                    }
                },
                error: function () {
                    console.error('Failed to check authentication.');
                }
            });
        });
    


    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Lắng nghe tất cả các yêu cầu Ajax để xử lý lỗi 403
            $(document).ajaxError(function (event, jqxhr, settings, thrownError) {
                if (jqxhr.status === 403) {
                    // Kiểm tra và lấy thông báo lỗi từ response JSON
                    const errorResponse = JSON.parse(jqxhr.responseText);
                    alert(errorResponse.error);  // Hiển thị thông báo lỗi
                }
            });
        });
