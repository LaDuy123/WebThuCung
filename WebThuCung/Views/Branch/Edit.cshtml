@model WebThuCung.Dto.BranchDto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Branch</li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Edit Branch</h5>
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Edit Branch Form -->
                        <form asp-action="Edit" method="post">
                            <!-- Branch ID (readonly) -->
                            <div class="row mb-3">
                                <label for="inputIdBranch" class="col-sm-2 col-form-label">Branch ID</label>
                                <div class="col-sm-10">
                                    <!-- Trường hiển thị ID, chỉ đọc -->
                                    <input type="text" class="form-control" id="inputIdBranch" name="idBranchReadonly" value="@Model.idBranch" readonly />

                                    <!-- Trường ẩn để gửi ID -->
                                    <input type="hidden" name="idBranch" value="@Model.idBranch" />

                                    <span asp-validation-for="idBranch" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Branch Name -->
                            <div class="row mb-3">
                                <label for="inputNameBranch" class="col-sm-2 col-form-label">Branch Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inputNameBranch" name="nameBranch" value="@Model.nameBranch" required />
                                    <span asp-validation-for="nameBranch" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Branch Logo -->
                            <div class="row mb-3">
                                <label for="inputLogo" class="col-sm-2 col-form-label">Logo</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inputLogo" name="logo" value="@Model.Logo" />
                                    <span asp-validation-for="Logo" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <a asp-action="Index"
                                       class="btn btn-primary">Back</a>
                                </div>
                            </div>
                        </form><!-- End Edit Branch Form -->

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

