@model IEnumerable<WebThuCung.Models.Branch>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Branch List</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Branch</li>
                <li class="breadcrumb-item active">List</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Branch List</h5>
                        

                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name Branch</th>
                                    <th>Logo</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var branch in Model)
                                    {
                                        <tr>
                                            <td>@branch.idBranch</td>
                                            <td>@branch.nameBranch</td>
                                            <td>
                                                <img src="~/images/brand-logo/@branch.Logo" alt="Supplier Image" style="width: 100px; height: auto;" />
                                            </td>


                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">No branchs found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main --></main><!-- End #main -->
